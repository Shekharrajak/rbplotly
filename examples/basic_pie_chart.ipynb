    "require 'rbplotly'\n",
    "\n",
    "data = {\n",
    "  labels: %w(Residential Non-Residential Utility),\n",
    "  values: [19, 26, 55],\n",
    "  type: 'pie'\n",
    "}\n",
    "\n",
    "layout = { title: 'Forcasted 2014 U.S. PV Installations by Market Segment' }\n",
    "\n",
    "plot = Plotly::Plot.new(data: [data], layout: layout )\n",
    "plot.show"
   ]
